<body class="text-center">
    <div class="container ">
        <form action="/signup" method="POST" class="form-signin">
            <i class="fa fa-sign-in fa-10x r" aria-hidden="true"></i>
            <h1 class="h3 mb-3 font-weight-normal text-white">Please sign up</h1>
            <label for="inputEmail" class="sr-only text-white">Username</label>

            <label for="inputEmail" class="sr-only text-white">Email address</label>
            <input id="signupemail" name="username" type="email" id="inputEmail" class="form-control"
                placeholder="Email address" required autofocus>
            <label for="inputPassword" class="sr-only text-white">Password</label>
            <input id="signuppin" name="password" type="password" id="inputPassword" class="form-control text-white"
                placeholder="Password" required>
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Remember me
                </label>
            </div>
            <button id="signupbtn" class="btn btn-lg btn-success btn-block text-white " type="submit">Sign in</button>
            <p class="mt-5 mb-3 text-white">&copy; 2017-2018</p>
        </form>
    </div>

